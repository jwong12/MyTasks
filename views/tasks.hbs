<div class="content-wrapper">
    <div class="nav-wrapper">
        <div class="nav-content"><span>Hello {{username}},</span><a class="nav-link" href="/logout">Sign out</a></div>
    </div>
    <div class="container">
        <h1>MyTasks</h1>
        <ul class="nav nav-tabs">
            <li><a href="/" class="non-active">Add Item</a></li>
            <li class="active"><a href="/tasks">View List</a></li>
        </ul><br/>
        <div class="row"></div>
        <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover table-condensed" id="tasks">
                <tr>
                    <th class="th-task">Task</th>
                    <th class="th-category">Category</th>
                    <th class="th-date" id="th-date">Date</th>
                    <th class="th-status" onclick="handleClickOnStatus()">Status</th>
                    <th class="th-priority" onclick="handleClickOnPriority()">Priority</th>
                    <th class="th-remove">Delete</th>
                </tr>
            </table>            
        </div>
    </div>
    <div id="loader-wrapper">
        <div id="loader"></div>
    </div>
</div>
<script src="/javascripts/datepicker.min.js"></script>
<script src="/javascripts/bundle-tasks.js"></script>
<script src="javascripts/tasks.js"></script>