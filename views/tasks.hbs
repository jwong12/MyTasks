<div class="content-wrapper">
    <div class="nav-wrapper">
        <div class="nav-content"><span>Hello {{username}},</span><a class="nav-link" href="/logout">Sign out</a></div>
    </div>
    <div class="container">
        <h1>MyTasks</h1>
        <ul class="nav nav-tabs">
            <li><a href="/" class="non-active">Add Item</a></li>
            <li class="active"><a href="/tasks">View List</a></li>
        </ul><br/>
        <div class="row"></div>
        <div class="col-md-6">
            <table class="table table-striped table-bordered table-hover table-condensed" id="tasks">
                <tr>
                    <th class="th-task" onclick="handleClickOnTh('task', sortByAlphabet)">Task<img 
                        class='img-arrow' id='arrow-task' src='images/sort-arrow.svg' alt=''
                    ></th>
                    <th class="th-category" onclick="handleClickOnTh('category', sortByAlphabet)">Category<img 
                        class='img-arrow' id='arrow-category' src='images/sort-arrow.svg' alt=''
                    ></th>
                    <th class="th-date" id="th-date" onclick="handleClickOnDateTh()">Date<img 
                        class='img-arrow' id='arrow-date' src='images/sort-arrow.svg' alt=''
                    ></th>
                    <th class="th-status" onclick="handleClickOnTh('status', sortByStatus)">Status<img 
                        class='img-arrow' id='arrow-status' src='images/sort-arrow.svg' alt=''
                    ></th>
                    <th class="th-priority" onclick="handleClickOnTh('priority', sortByPriority)">Priority<img 
                        class='img-arrow' id='arrow-priority' src='images/sort-arrow.svg' alt=''
                    ></th>
                    <th class="th-remove"></th>
                </tr>
            </table>            
        </div>
    </div>
</div>
<div id="loader-wrapper">
    <div id="loader"></div>
</div>
<script src="/javascripts/datepicker.min.js"></script>
<script src="/javascripts/bundle-tasks.js"></script>
<script src="javascripts/tasks.js"></script>