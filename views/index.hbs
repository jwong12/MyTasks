<div class="content-wrapper">
    <div class="nav-wrapper">
        <div class="nav-content"><span>Hello {{username}},</span><a class="nav-link" href="/logout">Sign out</a></div>
    </div>
    <div id="main-wrapper">
        <h1>MyTasks</h1>
        <ul class="nav nav-tabs">
            <li class="active"><a href="/">Add Item</a></li>
            <li><a href="/tasks" class="non-active">View List</a></li>
        </ul><br>

        <form method="post" id="submitForm">
            <div class="form-group">
                <label for="task" class="col-sm-2 control-label">Task:</label>
                <div class="col-sm-10">
                    <input type="text" class="text-input" name="task" id="task">
                </div>
            </div>
            <div class="form-group">
                <label for="category" class="col-sm-2 control-label">Category:</label>
                <div class="col-sm-10">
                    <input type="text" class="text-input" name="category" id="category" value="Work">
                </div>
            </div>
            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">Date:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autocomplete="off" name="date" id="date">
                </div>
            </div>       
            <label for="status" class="col-sm-2 control-label" id="status">Status:</label>
            <div id="radio-buttons">
                <input type="radio" id="active" name="status" value="Active" checked="checked">
                <label for="active">Active</label>
                <input type="radio" id="in-progress" name="status" value="In Progress">
                <label for="in-progress">In Progress</label>
                <input type="radio" id="urgent" name="status" value="Finished">
                <label for="urgent">Urgent</label>
            </div>
            <div id="priority-wrapper">
                <label for="priorityInput" class="col-sm-2 control-label" id="priorityLabel">Priority:</label>
                <input 
                    type="range" 
                    name="priorityInput" 
                    id="priorityInputId" 
                    class="form-control" 
                    value="1" 
                    min="1" 
                    max="3" 
                    oninput="priorityOutputId.value = changeInputRange(priorityInputId.value)"
                >
                <output name="priorityOutput" id="priorityOutputId">low</output>
            </div>
            <br><br>
            <div id="btn-wrapper">
                <button type="submit" class="btn btn-primary">Add Task</button>
            </div>
        </form><br>
        <div id="statusMsg">
    </div>
</div>
<script src="/javascripts/datepicker.min.js"></script>
<script src="/javascripts/bundle.js"></script>
<script src="/javascripts/index.js"></script>
